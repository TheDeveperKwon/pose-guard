{
  "name": "pose-guard",
  "version": "1.0.10",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TheDeveperKwon/pose-guard.git"
  },
  "main": "main.js",
  "scripts": {
    "sync:mediapipe": "node scripts/sync-mediapipe-assets.js",
    "postinstall": "npm run sync:mediapipe",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run sync:mediapipe && electron .",
    "build": "npm run sync:mediapipe && electron-builder --dir --publish never",
    "dist": "npm run sync:mediapipe && electron-builder --publish never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "@mediapipe/camera_utils": "^0.3.1675466862",
    "@mediapipe/drawing_utils": "^0.3.1675466124",
    "@mediapipe/pose": "^0.5.1675469404"
  },
  "build": {
    "appId": "com.poseguard.lite",
    "productName": "PoseGuard Lite",
    "artifactName": "PoseGuard-Lite-${os}-${arch}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../shared",
        "to": "shared"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": false,
      "category": "public.app-category.healthcare-fitness",
      "icon": "src/presentation/assets/icon.icns",
      "extendInfo": {
        "NSCameraUsageDescription": "PoseGuard Lite needs camera access to monitor posture."
      }
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "src/presentation/assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "src/presentation/assets/icon.png"
    }
  }
}
