{
  "name": "pose-guard",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder --dir --publish never",
    "dist": "electron-builder --publish never"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "@mediapipe/camera_utils": "^0.3.1675466862",
    "@mediapipe/drawing_utils": "^0.3.1675466124",
    "@mediapipe/pose": "^0.5.1675469404"
  },
  "build": {
    "appId": "com.poseguard.lite",
    "productName": "PoseGuard Lite",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**",
      "package.json",
      "node_modules/**"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": false,
      "category": "public.app-category.healthcare-fitness",
      "icon": "src/presentation/assets/icon.icns",
      "extendInfo": {
        "NSCameraUsageDescription": "PoseGuard Lite needs camera access to monitor posture."
      }
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "src/presentation/assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "src/presentation/assets/icon.png"
    }
  }
}
